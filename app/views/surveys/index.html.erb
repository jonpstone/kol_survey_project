<div class="row">
	<div class="col s12 m6">
		<ul class="collection with-header">
			<li class="collection-header"><h4>Surveys</h4></li>
			<!-- list surveys -->
			<% @surveys.ordered.each do |survey| %>
				<li class="collection-item">
					<%= 
						link_to survey.name, 
						survey_survey_questions_path(survey),
						class: "survey-name"
					%>
					<% if survey.due_date? %>
						Due date: <%= survey.month %>/<%= survey.day %>/<%= survey.year %>
					<% end %>
					<%= 
						link_to( 
							'Edit survey', 
							edit_survey_path(survey),
							class: 'question-options',
						) 
					%>
					<br />
				</li>
			<% end %>
		</ul>

		<div class="row">
			<div class="col s12 m6">
				<%= 
					link_to(
						'Create Survey',
						new_survey_path,
						class: "btn waves-effect waves-light"
					)
				%>
			</div>
		</div>
	</div>
</div>
